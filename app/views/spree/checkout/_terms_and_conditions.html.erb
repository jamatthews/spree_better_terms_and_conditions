<div>
  <h4><%= Spree.t('terms_and_conditions.title') %></h4>

  <div class="well" style="max-height: 300px; overflow-y: scroll;">
    <%= render 'spree/checkout/terms_and_conditions_text' %>
  </div>
</div>

<div class="well text-right form-buttons" data-hook="buttons">
	  <span data-hook="terms_accept">
	    <%= form.check_box :terms_and_conditions %>
	    <%= label_tag(:terms_and_conditions, Spree.t('terms_and_conditions.checkbox')) %>
	  </span>
	<%= submit_tag Spree.t(:save_and_continue), :class => 'btn btn-success' %>
</div>